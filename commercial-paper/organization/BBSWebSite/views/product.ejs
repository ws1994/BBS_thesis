<% layout('layout') %>
   <section class="jumbotron text-center">
        <div class="container py-3">
         <h1><%= title %></h1>
         <h2><%= subtitle %></h2>
        </div>
    </section>

<div class="container px-4 py-3" id="featured-3">

    <form class="needs-validation" novalidate action='/addFile' method="post">
        <div class="row g-3">
        
        <div class="col-12">
          <label for="fileName" class="form-label">文件名字</label>
          <input type="text" class="form-control" id="fileName" name="fileName" placeholder="name" value="" required>
        </div>


        <div class="col-12 py-3">
          <label for="fileRule" class="form-label">访问规则</label>
          <div class="input-group has-validation">
            <input type="text" class="form-control" id="fileRule" name="fileRule" placeholder="rule" required>
          </div>
        </div>

        <div class="col-12 py-3">
          <label for="fileDes" class="form-label">文件描述 <span class="text-muted">(Optional)</span></label>
          <input type="email" class="form-control" id="fileDes" name="fileDes" placeholder="">
        </div>


        <hr class="my-4">

        <div class="btn-group py-3 col-12">
            <button class="w-100 btn btn-primary btn-lg" type="submit">提交</button>
        </div>

        </div>
    </form>


</div>